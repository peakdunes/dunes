@model List<DUNES.Shared.DTOs.Auth.MenuItemDto>
@{
    ViewData["Title"] = "Home Page";
}


<div class="text-center">
    <h1 class="brand-title">DUNES</h1>
    <h3 class="brand-subtitle">System Information</h3>
</div>

<div class="container mt-4">
    <h2 class="mb-4 page-section-title">Main Menu</h2>

    <div class="row g-3 align-items-stretch">
        @foreach (var item in Model.Where(m => m.Code.Length == 2))
        {
            <div class="col-12 col-sm-6 col-md-4">
                <div class="card dunes-card h-100">
                    <div class="card-body">
                        <h5 class="card-title mb-1">@item.Title</h5>
                        <p class="card-text">
                            @(!string.IsNullOrEmpty(item.Utility) ? item.Utility : "No description")
                        </p>
                        <a href="/Menu/Level/@item.Code" class="stretched-link" aria-label="@item.Title"></a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
