@model List<DUNES.Shared.DTOs.Auth.MenuItemDto>
@{
    ViewData["Title"] = "Home Page";
}
<style>
    .breadcrumb-item.active {
        color: #ffc107; /* amarillo tenue */
        font-weight: 300;
    }

    .breadcrumb a {
        text-decoration: none;
    }

        .breadcrumb a:hover {
            text-decoration: underline;
        }

</style>
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="/">Home</a>
        </li>
        <li class="breadcrumb-item">
            <a href="/Inventory">Inventory</a>
        </li>
        <li class="breadcrumb-item active text-warning fw-light" aria-current="page">
            Unprocessed List Transactions
        </li>
    </ol>
</nav>


<div class="container mt-4">
   

    <div class="row g-3 align-items-stretch">
        @foreach (var item in Model.Where(m => m.Code.Length == 4))
        {
            <div class="col-12 col-sm-6 col-md-4">
                <div class="card shadow-sm h-100 card-hover"
                     style="cursor:pointer;"
                     onclick="window.location.href='/Menu/Level/@item.Code'">
                    <div class="card-body">
                        <h5 class="card-title">@item.Title</h5>
                        <p class="card-text text-muted">
                            @(!string.IsNullOrEmpty(item.Utility) ? item.Utility : "No description")
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>



<style>
    /* 🎨 Efecto hover para que parezca clickeable */
    .card-hover:hover {
        transform: translateY(-5px);
        box-shadow: 0 6px 12px rgba(0,0,0,0.15);
        transition: all 0.2s ease-in-out;
    }
</style>